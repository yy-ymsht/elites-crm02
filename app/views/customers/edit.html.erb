<div class="row">
	<div class="col-lg-12">
		<h1>顧客情報の編集</h1>
		<%= render 'form' %>
		<button type="button" class="btn btn-default" style="margin-top:5px;" data-toggle="modal" data-target="#delete-customer">顧客情報を削除する</button>
		<%= link_to '戻る' , cutomer_path(@cutomer), style: "margin-top:5px", class: "btn btn-default" %>
	</div>
</div>
<!-- 下記のモーダルは通常は隠れているのでどこ日描いてもOK -->
<div class="modal fade" id="delete-customer">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4></h4>
			</div>
			<div class="modal-body">
				<p><%= @cutomer.family_name %>さんを削除しますか？</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="model">キャンセル</button>
				<%= link_to '削除する' , @cutomer, method: :delete, class: "btn btn-danger" %>
			</div>
		</div>
	</div>
</div>
